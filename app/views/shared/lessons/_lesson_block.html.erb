<div class="lesson-block hover" onclick="window.location='<%= course_lesson_path(course, lesson) %>'">
  <div class="default-state">
    <div class="lesson-order"><%= index %></div>
    <div class="lesson-title"><%= lesson.title.truncate(15) %></div>
    <div class="lesson-duration"><i class="icon-clock"></i><%= Duration.duration_str(lesson.duration) %></div>
  </div>
  <div class="hover-state">
    <i class="icon-arrow"></i>
    <div>
      <span class="lesson-order"><%= lesson.lesson_order %></span>
      <i class="icon-clock"></i>
      <span class="lesson-duration"><%= Duration.duration_str(lesson.duration) %></span>
    </div>
    <h1 class="lesson-title"><%= lesson.title %></h1>
    <p class="lesson-summary"><%= lesson.summary.truncate(90) %></p>
    <%= link_to course_lesson_path(course, lesson) do %>
      <div class="btn small-lesson-button">
        <%= t("course_page.start_lesson") %>
      </div>
    <% end %>
  </div>
</div>
