  <div class="container">
    <% @courses.each do |c| %>
      <a class="course-widget" href="<%= course_path(c) %>">
        <header>
          <h3><%= c.title %></h3>
        </header>
        <div class="description">
          <p><%= c.summary %></p>
          <div class="percent-complete"><%# percent_complete(c) %></div>
          <div class="duration">
            <i class="icon-clock grey"></i><%= c.duration %>
          </div>
        </div>
      </a>
    <% end %>
  </div>


