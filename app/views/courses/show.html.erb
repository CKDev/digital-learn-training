<%= render "meta_information" %>

<div class="row">
  <div class="eight columns">
    <div class="course-details">
      <div class="margin-bottom"><i class="icon-pencil"></i><%= @course.lessons.count %> <%= t("course_page.lessons") %></div>
      <div><i class="icon-clock"></i><%= @course.duration(t("course_page.minutes")) %></div>
    </div>
    <div><small><%= t("course_page.contributed_by") %> <%= @course.contributor %></small></div>
  </div>

  <div class="four columns align-right mobile-tweak">
    <% if admin_signed_in? %>
      <p class="course-edit-add-remove"><small><%= link_to "Edit Course >>", edit_admin_course_path(@course) %></small></p>
      <%= link_to t("course_page.start_course"), course_start_path(@course), method: :post, class: "btn button-color" %>
    <% else %>
      <%= link_to t("course_page.start_course"), course_start_path(@course), method: :post, class: "btn unauth-start-course-button button-color" %>
    <% end %>
  </div>
</div>

<div><%= sanitize @course.description %></div>

<hr>

<h2><%= t("course_page.lessons_in_this_course") %></h2>
<%= render partial: "shared/lessons/grid", locals: { course: @course } %>

<hr>

<%= render partial: "shared/courses/supplemental_materials", locals: { course: @course } %>
