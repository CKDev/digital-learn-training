<% @courses.each do |c| %>
  <a class="course-widget" href="<%= course_path(c) %>">
    <header>
      <h3><%= c.title.truncate(45) %></h3>
    </header>
    <div class="description">
      <p><%= c.summary.truncate(80) %></p>
      <div class="duration">
        <i class="icon-clock grey"></i><%= c.duration %>
      </div>
    </div>
  </a>
<% end %>
