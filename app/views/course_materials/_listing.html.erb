<% @course_materials.each do |c| %>
<a class="course-widget <%= c.new_course? ? 'new-course' : '' %>" href="<%= course_material_path(c) %>">
  <header>
    <h3><%= c.title.truncate(45) %></h3>
  </header>
  <div class="description">
    <div class="summary">
      <p><%= c.summary.truncate(80) %></p>
    </div>
  </div>
</a>
<% end %>
