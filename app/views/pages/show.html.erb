<% content_for :meta_title do %>
  <%= @page.seo_title.present? ? @page.seo_title : @page.title  %>
<% end %>
<% if @page.meta_desc.present? %>
  <% content_for :meta_description do %>
    <%= @page.meta_desc %>
  <% end %>
<% end %>

<% content_for :callout do %>
  <h1><%= @page.title %></h1>
<% end %>

<%= sanitize @page.body %>
