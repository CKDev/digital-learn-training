<footer class="footer-primary">
  <div class="container">
    <div class="row">
      <div class="three columns">
        <ul class="cms_nav unmarked">
          <h3>Learn More</h3>
          <% @footer_links.each do |page| %>
            <li><%= link_to page.title, page_path(page) %></li>
          <% end %>
        </ul>
      </div>
      <div class="three columns">
        <ul class="cms_nav footer-box unmarked">
          <li><%= mail_to contact_email, "Contact Us", subject: "Contact from DigitalLearn Training site" %></li>
        </ul>
      </div>
      <div class="three columns footer-box license">
        This work is licensed under a Creative Commons BY-NC-SA License
      </div>
      <div class="three columns footer-box">
        <%= render "logo_footer" %>
      </div>
    </div>
  </div>
</footer>
