<header class="site-header">
  <div class="container">
    <nav class="secondary-links">
      <%= link_to "Tools for Learners", "https://www.digitallearn.org/" %>
    </nav>
    <div class="logo-link-container">
      <%= link_to root_path do %>
        <div class="logo">
          <div class="logo-icon">
            <%= image_tag "dl_logo" %>
          </div>
        </div>
      <% end %>
      <nav class="primary-links">
        <% if admin_signed_in? %>
          <span class="black">Hi Admin!</span><span class="divider">|</span>
          <%= link_to "Admin Dashboard", admin_root_path %><span class="divider">|</span>
          <%= link_to "Sign Out", destroy_user_session_path, method: "delete" %>
        <% else %>
          <%= link_to "Course Materials", "#" %><span class="divider">|</span>
          <%= link_to "Training", courses_path %><span class="divider">|</span>
          <%= link_to "Peer Discussion", "http://community.digitallearn.org/" %>
        <% end %>
      </nav>
    </div>
  </div>
</header>
