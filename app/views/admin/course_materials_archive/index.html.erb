<%= content_for(:callout) { %><h1>Course Archive Index</h1><% } %>

<div class="extra-margin-bottom">
  <div class="list-titles">
    <div class="cell">Course</div>
    <div class="cell">Contributor</div>
    <div class="cell">&nbsp;</div>
  </div>
  <% if @course_materials.present? %>
    <ul class="objects">
      <% @course_materials.each do |course_material| %>
        <li>
          <div class="cell"><%= link_to course_material.title, edit_admin_course_material_path(course_material) %></div>
          <div class="cell"><%= course_material.contributor %></div>
          <div class="cell"><%= link_to "Un-Archive", admin_course_materials_archive_path(course_material),
            method: :delete, data: { confirm: "Are you sure you want to un-archive this course?" } %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no archived courses.</p>
  <% end %>

</div>

<p>
  <%= link_to "View Un-archived Course", admin_course_materials_path, class: "note" %>
</p>
