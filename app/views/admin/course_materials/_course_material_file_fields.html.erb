<div class="nested-fields">
  <div class="js-form-upload">
    <%= f.label :file do %>
      <% if f.object.file.present? %>
        <small class="padding-left">
          (<%= f.object.file_file_name %> - <%= number_to_human_size(f.object.file.size) %>)
        </small>
      <% else %>
        <small>New File</small>
      <% end %>
    <% end %>
    <%= f.file_field :file, accept: Constants.course_material_file_types_str, class: "margin-bottom" %>
  </div>

  <div class="extra-margin-bottom">
    <%= link_to_remove_association "Remove Course File", f %>
  </div>
</div>
