<%= content_for(:callout) { %><h1>Trainings</h1><% } %>

<h2 class="screen-reader-text">Trainings Index View</h2>

<div class="row extra-margin-bottom">
  <div class="six columns">
    <%= link_to "Add a New Training", new_admin_course_path, class: "btn" %>
  </div>
  <div class="six columns">
    <p class="note no-top-margin">
      Re-order trainings on the homepage by clicking on the arrow icon to drag and drop trainings. Edit by clicking the appropriate training below.
    </p>
  </div>
</div>

<%= hidden_field_tag :sort_url, "/admin/trainings/sort" %>
<div class="extra-margin-bottom">
  <div class="sortable-list">
    <div class="list-titles">
      <div class="cell">Training</div>
      <div class="cell">Contributor</div>
      <div class="cell">Status</div>
      <div class="cell">Publication Date</div>
    </div>
    <% if @courses.present? %>
      <ul class="objects sortable reorderable">
        <% @courses.each do |course| %>
          <li class="sortable-item" data-id="<%= course.id %>">
            <div class="cell"><%= link_to course.title, edit_admin_course_path(course), class: "no_drag_link" %></div>
            <div class="cell"><%= course.contributor %></div>
            <div class="cell"><%= pub_status(course.pub_status) %></div>
            <div class="cell"><%= course.pub_date_str %></div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no available trainings.</p>
    <% end %>
  </div>
</div>

<p>
  <%= link_to "View Archived Trainings", admin_courses_archive_index_path, class: "note" %>
</p>
